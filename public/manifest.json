{
  "manifest_version": 2,
  "name": "UtaMita",
  "description": "YouTubeの広告の音量を調整する．",
  "version": "0.3",
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "eventpage.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_title": "YouTubeAdVolumeController", 
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "https://www.youtube.com/*",
    "storage"
  ]
}